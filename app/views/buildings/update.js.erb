var building_id = '<%= building.id %>';
$("#building_" + building_id + "_div").bind('ajax:success', function() {
	// @TODO This matching could be a little better. As in, use the div ID for selection
	$(this).closest('div').html('<%= escape_javascript render :partial => 'index_row_generic', :locals => {:building => @building, :row_style =>row_style} %>');
	//Returning false ensures the page doesn't scroll to the top
	return false;
});