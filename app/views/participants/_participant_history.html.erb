<% if history.size == 0 %>  
	<div class="small-label"><%= t :no_contact_history %></div>
<% else %>
	<div>
	 <%= link_to image_tag("add_icon.gif", :id => "#{participant.id}-history_img"), "javascript:void(0)",  
	  :onclick => "plusMinusToggle('history_div_#{participant.id}', '#{participant.id}-history_img');" %>

	  <span class="small-label"><%= t :history %></span>
	  <div id="history_div_<%= participant.id %>" class="participant_detail">

		<div style="margin-left: 15px;">
		  <table cellspacing="0" cellpadding="0">
			 <% history.each  do |h| -%>
			 <tr>
				<span class="detail_label">
				<td><%= link_to h.report.tag,  "/#{h.report.class.name.tableize}/#{h.report.id}", :target => "blank" %></td>
				<td><%= h.date.to_s(:short_date_only) rescue unknown %></td>
				<td><%= h.reasons.join(", ") %></td>
				</span>
			 </tr>
			 <% end -%>
		  </table>
		</div>

	  </div>
	</div>
<% end %>
