
$("input#full_name").val("");
$("input#participant_id").val("");
<% if @insert_new_participant_partial  %>

	<%  if display_common_reasons?(@report) %>
	      $("#common-reasons-container").show();
	      $("#common-reasons-container").html(
	        "<%= escape_javascript render(:partial => 'report_common_relationship_checklist', :locals => {:report => @report}) %>" );
	<%  end %>
   
	<%  if ((@report.number_of_participants-1) % ReportsHelper::REPORT_COLUMNS  == 0) %>
		$("#s-i-form").prepend("<tr id=<%= participant_row_id(@report) %>></tr>");
	<% end %>
	$("#<%= participant_row_id(@report) %>").prepend("<%= escape_javascript render(:partial => 'participant_in_report', :locals => {:report => @report, :participant => @participant}) %>");
<% end %>

